<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jobfinder.persistence.ResumeMapper">

    <select id="search" parameterType="String" resultType="Recruit">
        select * from recruit where r_title like concat(‘%’, #{keyword}, ‘%’) and
        r_work_addr in
        <foreach collection="list" item="tags" open="(" close=")" separator=",">
            #{tags}
        </foreach>
    </select>

</mapper>