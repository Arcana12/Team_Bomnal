<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jobfinder.persistence">

    <select id="list" resultType="com.jobfinder.domain.Company_info">
        select company_name, indus_name, count(review_seq) as count_review from company a, inudstry b, reviews c where a.indus_seq = b.indus_seq and a.company_id = c.company_id
    </select>

    <select id="detail" parameterType="com.jobfinder.domain.Company_info" resultType="com.jobfinder.domain.Company_info">
        select * from Company where company_id = #{company_id}
    </select>
</mapper>